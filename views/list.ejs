<%- include("header") -%>
<body>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
    <h2>What are your main focus today:</h2>
  </div>

  <div class="box">
      <% for(var i = 0; i < newListItems.length; i++){ %>
    <div class="item">
      <input type="checkbox">
      <p><%= newListItems[i] %> </p>
    </div>
    <%}%>
      <form class="item" action="/" method="post">

        <input type="text" name="newItem" placeholder="New item" autocomplete="off">
        <!-- autocomplete = "off" this removes suggestions -->
        <button type="submit" name="list" value= <%= listTitle %> >+</button>
      <!-- Make the value of the button dynamic... Meaning whatever the value of listTitle is where this will be submitted -->
      </form>
    </div>

</body>
<%- include("footer") -%>
